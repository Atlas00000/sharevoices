{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "paths": {
      "@sharedvoices/shared/*": ["server/shared/*"],
      "@sharedvoices/db/*": ["db/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}