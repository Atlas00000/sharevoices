{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "../../../",
    "paths": {
      "@/*": ["server/services/user/src/*"],
      "@sharedvoices/shared/*": ["server/shared/*"],
      "@sharedvoices/db/*": ["db/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../../shared" },
    { "path": "../../../db" }
  ]
}